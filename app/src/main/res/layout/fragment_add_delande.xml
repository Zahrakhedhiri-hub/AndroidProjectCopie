<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jaune"
    tools:context=".AddDelandeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/champs"
            android:layout_width="150dp"
            android:layout_below="@+id/titre"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Nom du produit:"


            android:textColor="@color/colorAccent"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"

            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Ajout d'une demande"
            android:layout_marginTop="10dp"

            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/nomDemande"
            android:layout_below="@+id/titre"

            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/champs"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp" /> />

        <ImageView
            android:id="@+id/imageDemande"
            android:layout_width="120dp"

            android:layout_height="120dp"
            android:layout_below="@+id/nomDemande"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="100dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <android.widget.Button
            android:id="@+id/addDemande"
            android:background="@drawable/button_rectangle_pink"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_marginLeft="40dp"
            android:hint="Adresse"
            android:layout_below="@+id/addImageDemande"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:text="Ajouter" />

        <android.widget.Button
            android:id="@+id/addImageDemande"
            android:background="@drawable/button_rectangle_pink"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_marginLeft="40dp"
            android:hint="Adresse"
            android:layout_below="@+id/imageDemande"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="Choisir image" />
    </RelativeLayout>


</FrameLayout>