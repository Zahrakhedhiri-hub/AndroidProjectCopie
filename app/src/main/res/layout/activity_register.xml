<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Register">

    <EditText
        android:id="@+id/fullName"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/image"
        android:hint="Nom et Prenom"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/fullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
        android:ems="10"
        android:hint="Adresse mail"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/password"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Mot de passe"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <android.widget.Button
        android:id="@+id/registerBtn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/adresse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_rectangle_pink"
        android:ems="10"
        android:text="Register"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/loginLink"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/registerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#11000000"
        android:ems="10"
        android:text="Login"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/phoneNumber"
        android:background="#11000000"
        android:hint="NuumÃ¨ro de telephone"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="number" />

    <TextView
        android:id="@+id/adresse"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:hint="Adresse"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginLeft="80dp"
        android:drawableLeft="@drawable/ic_home_black_24dp"
        android:layout_marginTop="40dp"
        android:background="#11000000"
        android:ems="10"
        android:textColor="#ffffff"/>

    <android.widget.Button
        android:id="@+id/map"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="Adresse"
        android:textColor="#ffffff"
        android:background="@drawable/button_rectangle_pink"
        android:layout_below="@+id/phoneNumber"
        android:layout_toRightOf="@+id/adresse"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:ems="10" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />



</RelativeLayout>