<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jaune"
        android:orientation="vertical">

        <TextView
            android:id="@+id/champs"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"


            android:ems="10"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Nom du produit:"


            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nomRes"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/champs"


            android:ems="10"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageRes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/nomRes"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <android.widget.Button
            android:id="@+id/annuler"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_below="@+id/imageRes"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle_pink"
            android:ems="10"
            android:hint="Adresse"
            android:text="Annuler" />

        <android.widget.Button
            android:id="@+id/supprimer"
            android:layout_width="150dp"
            android:layout_height="58dp"
            android:layout_below="@+id/imageRes"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/annuler"
            android:background="@drawable/button_rectangle_pink"
            android:ems="10"
            android:hint="Adresse"
            android:text="Supprimer" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

